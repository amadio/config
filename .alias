#!/bin/bash

if ${use_color} ; then
	alias ls='ls --color'
	alias grep='grep --color=auto'
	
	type -P colordiff >/dev/null && \
		alias diff=colordiff
fi

alias ..='cd ..'
alias la='ls -A'
alias lr='ls -R'
alias lt='ls -sh'
alias ll='ls -lGgh'
alias l.='ls -d .[a-z,A-Z,0-9]*'
alias man='LANG=C man'

alias df='df -H'
alias du='du -sh'

# load machine specific alias file
if [[ -f $HOME/.alias-$HOSTNAME ]]; then
	source $HOME/.alias-$HOSTNAME
fi

