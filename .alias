#!/bin/bash

if ${use_color} ; then
	alias ls='ls -v --color --group-directories-first'
	alias grep='grep --color=auto'
	
	type -P colordiff >/dev/null && \
		alias diff=colordiff

	function man() # add color to man pages
	{
		env \
		LESS_TERMCAP_md=$(tput bold; tput setaf 4) \
		LESS_TERMCAP_me=$(tput sgr0)               \
		LESS_TERMCAP_us=$(tput smul; tput setaf 5) \
		LESS_TERMCAP_ue=$(tput rmul; tput sgr0)    \
		LESS_TERMCAP_so=$(tput smso; tput setaf 7) \
		LESS_TERMCAP_se=$(tput rmso; tput sgr0)    \
		GROFF_NO_SGR=1 LANG=C man "$@"
	}
fi

alias ..='cd ..'
alias la='ls -A'
alias lr='ls -R'
alias lt='ls -sh'
alias ll='ls -lGgh'
alias l.='ls -d .[a-z,A-Z,0-9]*'

alias df='df -H'
alias du='du -sh'

alias vi='vim'

function title() {
	echo -ne "\033]0;$@\007"
}

function email() {
	local mbox name
	case $1 in
		cern)   name='CERN';   mbox='imaps://imap.cern.ch' ;;
		gmail)  name='GMail';  mbox='imaps://imap.gmail.com' ;;
		unesp)  name='SPRACE'; mbox='imaps://mail.ncc.unesp.br' ;;
		gentoo) name='Gentoo'; mbox='imaps://dev.gentoo.org' ;;
	esac
	unset PROMPT_COMMAND; title ${name}
	[ -v mbox ] && mutt -f $mbox || mutt
}
